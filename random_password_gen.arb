# frozen_string_literal: true
def pass_gen
  puts 'WELCOME TO THE RANDOM PASSWORD GENERATOR'
  puts 'Password Strength? Enter 1 : Normal, 2: Strong, 3:  Unbelievable'
  entry = gets.chomp
  case entry
  when '1'
    output = 10.times.map { rand(10) }.join
    puts "Newly Generated Password : #{output}"
  when '2'
    require 'securerandom'
    output  = SecureRandom.hex(8)
    puts "Newly Generated Password : #{output}"
  when '3'
    require 'securerandom'
    output  = SecureRandom.base64(10)
    puts "Newly Generated Password : #{output}"
  else
    puts 'Invalid Entry'
  end
end
pass_gen
